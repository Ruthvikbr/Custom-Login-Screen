<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@drawable/ui"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/loginBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:backgroundTint="#00227b"
        app:elevation="5dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        />

    <TextView
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBackButton"
        android:layout_centerHorizontal="true"
        android:text="@string/loginGreeting"
        android:padding="15dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/emailCV"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="22.5dp"
        android:background="#e0e0e0"
        >
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="#e0e0e0"
            android:textSize="15sp"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/passwordCV"
        android:layout_below="@id/emailCV"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="22.5dp"
        android:background="#e0e0e0"

        >
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="#e0e0e0"
            android:textSize="15sp"
            android:padding="10dp"
            android:importantForAutofill="no"
            android:imeOptions="actionDone"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordCV"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="22.5dp"
        app:cardElevation="10dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="@string/login"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_part_of_a_community"
            android:textColor="#000"
            android:id="@+id/registerQuestion"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/LoginToRegisterLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>

</RelativeLayout>